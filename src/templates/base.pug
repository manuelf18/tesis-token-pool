!!! 5
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    block title
      title Pagina Principal
    meta(name='description', content='Sufee Admin - HTML5 Admin Template')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='apple-touch-icon', href='apple-icon.png')
    link(rel='shortcut icon', href='favicon.ico')
    link(rel='stylesheet', href='{% static "vendors/bootstrap/dist/css/bootstrap.min.css" %}')
    link(rel='stylesheet', href='{% static "vendors/font-awesome/css/all.min.css" %}')
    link(rel='stylesheet', href='{% static "vendors/themify-icons/css/themify-icons.css" %}')
    link(rel='stylesheet', href='{% static "vendors/flag-icon-css/css/flag-icon.min.css" %}')
    link(rel='stylesheet', href='{% static "vendors/selectfx/css/cs-skin-elastic.css" %}')
    link(rel='stylesheet', href='{% static "vendors/jqvmap/dist/jqvmap.min.css" %}')
    link(rel='stylesheet', href='{% static "assets/css/style.css" %}')
    link(rel='stylesheet', href='{% static "assets/css/style2.css" %}')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800', rel='stylesheet', type='text/css')
  body
    // Left Panel
    aside#left-panel.left-panel
      nav.navbar.navbar-expand-sm.navbar-default
        .navbar-header
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#main-menu', aria-controls='main-menu', aria-expanded='false', aria-label='Toggle navigation')
            i.fa.fa-bars
          a.navbar-brand(href='./')
            img(src='{% static "/images/logo.png" %}', alt='Logo')
          a.navbar-brand.hidden(href='./')
            img(src='{% static "/images/logo2.png" %}', alt='Logo')
        #main-menu.main-menu.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='')
                i.menu-icon.fa.fa-dashboard
                | Dashboard
            h3.menu-title Menu
            // /.menu-title
            if user.is_superuser == True
              li.menu-item-has-children.dropdown
                a.dropdown-toggle(href="/admin")
                  i.menu-icon.fas.fa-user-tie
                  | Admin
              li.menu-item-has-children.dropdown
                a.dropdown-toggle(href="{% url 'tokens:buyer-template' %}")
                  i.menu-icon.fas.fa-scroll
                  | Pozos
            li.menu-item-has-children.dropdown
              a.dropdown-toggle(href="{% url 'tokens:status' %}")
                i.menu-icon.fas.fa-credit-card
                | Comprar Token
    #right-panel.right-panel
          header#header.header
            if user.is_anonymous == False
              .header-menu
                .offset-sm-7.col-sm-5
                  .user-area.dropdown.float-right
                    a.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                      h4
                        {{user.email}}
                    .user-menu.dropdown-menu
                      a.nav-link(href='#')
                        i.fa.fa-user
                        |  Bienviendo
                      a.nav-link(href='#')
                        i.fa.fa-cog
                        |  Settings
                      a.nav-link(href="{% url 'profiles:logout' %}")
                        i.fa.fa-power-off
                        |  Logout
            else
              a(href="{% url 'profiles:login' %}").btn.btn-secondary.float-right Iniciar Sesion
          .content.mt-5
            .card
              .col-12.my-2.py-5
                block content
    script(src='{% static "vendors/jquery/dist/jquery.min.js" %}')
    script(src='{% static "vendors/popper.js/dist/umd/popper.min.js" %}')
    script(src='{% static "vendors/bootstrap/dist/js/bootstrap.min.js" %}')
    script(src='{% static "assets/js/main.js" %}')
    script(src='{% static "vendors/chart.js/dist/Chart.bundle.min.js" %}')
    script(src='{% static "assets/js/dashboard.js" %}')
    script(src='{% static "assets/js/widgets.js" %}')
    script(src='{% static "vendors/jqvmap/dist/jquery.vmap.min.js" %}')
    script(src='{% static "vendors/jqvmap/examples/js/jquery.vmap.sampledata.js" %}')
    script(src='{% static "vendors/jqvmap/dist/maps/jquery.vmap.world.js" %}')
    script(src="https://cdn.jsdelivr.net/gh/ethereum/web3.js@1.0.0-beta.34/dist/web3.min.js")
    script.
            (function($) {
              "use strict";
              jQuery('#vmap').vectorMap({
              map: 'world_en',
              backgroundColor: null,
              color: '#ffffff',
              hoverOpacity: 0.7,
              selectedColor: '#1de9b6',
              enableZoom: true,
              showTooltip: true,
              values: sample_data,
              scaleColors: ['#1de9b6', '#03a9f5'],
              normalizeFunction: 'polynomial'
              });
            })(jQuery);
  block extra_js