        #navbarResponsive.collapse.navbar-collapse
          h2.text-white TRYS
          ul.navbar-nav.ml-auto
            a.btn.btn-outline-light(href='{% url "profiles:login" %}')
              i.fas.fa-user.mr-2
              |  Admin Login
    block content
    section.copyright.py-4.text-center.text-white
      .container
        small Trys Â© Trys SA 2019
        // Scroll to Top Button (Only visible on small and extra-small screen sizes)
        .scroll-to-top.d-lg-none.position-fixed
          a.js-scroll-trigger.d-block.text-center.text-white.rounded(href='#page-top')
            i.fa.fa-chevron-up
    // Bootstrap core JavaScript
    script(src=' {% static "landing/vendor/jquery/jquery.min.js" %}')
    script(src=' {% static "landing/vendor/bootstrap/js/bootstrap.bundle.min.js" %}')
    // Plugin JavaScript
    script(src=' {% static "landing/vendor/jquery-easing/jquery.easing.min.js" %}')
    // Contact Form JavaScript
    script(src=' {% static "landing/js/jqBootstrapValidation.js" %}')
    script(src=' {% static "landing/js/contact_me.js" %}')
