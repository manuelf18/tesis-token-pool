extends base_dark
block title
    title Compra de Token
block content
    .login-content
            .login-logo
                a(href='index.html')
                img.align-content(src='images/logo.png', alt='')
                h1(style='color:white;') Compra de Tokens
            .login-form
                    - csrf_token
                    label Cantidad de Tokens a Comprar
                    input#qty.form-control(type="number", name="")
                    button.buy-btn.btn.btn-primary(type="button") Comprar

block extra_js
    script.
        (async function($){
            let poolObj = new PoolContract($);
            await poolObj.setContract();
            $(".buy-btn").click(async () => {
                try{
                    await poolObj.addUserToPool($('#qty').val(), 'StandardToken', '0x9C6Db6594E96d85519E925D7dEf9f4E86cb0fA98');
                }
                catch(e){
                    alert(e);
                    throw new Error(e);
                }
            }); 
        })(jQuery);